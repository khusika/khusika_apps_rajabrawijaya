                android:layout_height="wrap_content"
                android:textStyle="bold"
                android:text="UAKK"
                android:textSize="14sp"
                android:paddingTop="8dp"
                android:paddingLeft="16dp"/>

            <TextView
                android:layout_below="@+id/uakk_first"
                android:id="@+id/uakk_second"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Unit Aktivitas Kerohanian Kristen"
                android:textSize="12sp"
                android:paddingLeft="16dp"
                android:paddingBottom="8dp"/>

        </RelativeLayout>


    </android.support.v7.widget.CardView>
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        card_view:cardUseCompatPadding="true"
        card_view:cardElevation="@dimen/card_elevation"
        card_view:cardCornerRadius="2dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/uakkat_image"
                android:background="@drawable/minat_kesejahteraanmahasiswa_uakkat"
                android:layout_width="match_parent"
                android:layout_height="200dp" />

            <TextView
                android:layout_below="@+id/uakkat_image"
